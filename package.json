{
  "name": "nodejs-typescript-esm-project-skeleton",
  "version": "0.0.1",
  "description": "Typescript project skeleton.",
  "author": "Daniel Soifer <danisoifer@gmail.com>",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": "^18.17.1"
  },
  "scripts": {
    "clean": "rimraf coverage dist node_modules",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "format:check": "prettier --check \"{src,test}/**/*.ts\"",
    "lint": "yarn format:check && tsc --noEmit && eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "tsc --noEmit && eslint \"{src,test}/**/*.ts\" --fix",
    "start": "ts-node --esm -r tsconfig-paths/register src/index.ts",
    "start:dev": "nodemon",
    "start:prod": "node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.12.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "lodash-es": "^4.17.21",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/lodash-es": "^4.17.8",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.17.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
